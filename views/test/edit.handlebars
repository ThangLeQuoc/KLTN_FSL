<div class="panel panel-success">
	<div class="panel-heading">Information</div>
	{{#if doc}}
	<div class="panel-body">
		<form class="form-horizontal" action="/update_post/{{doc._id}}" method="post">
			<input type="text" class="hide" value="{{doc._id}}"></div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Giá phòng: </label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name="giaphong" value="{{doc.giaphong}}"/>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Giá điện:</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name="giadien" value="{{doc.giadien}}" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Giá nước: </label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name="gianuoc" value="{{doc.gianuoc}}" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Mô tả : </label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name="motacackhoangiakhac" value="{{doc.motacackhoangiakhac}}"/>
				</div>
			</div>
			<div class="row">
				<button type="submit" class="btn btn-default">Submit</button>
			</div>
		</form>
	</div>
{{/if}}
</div>
